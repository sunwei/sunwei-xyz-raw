{
	# 全局日志配置
	log {
		output file /var/log/caddy/access.log
		format json
	}
}

sunwei.xyz {
	root * /root/web/sunwei-xyz-raw
	file_server
}

notes.sunwei.xyz {
	root * /root/web/sunwei-xyz-raw/notes
	file_server
}

# 子域名配置，将所有请求转发到 127.0.0.1:1314
mdfriday.sunwei.xyz {
    protocols h1
    reverse_proxy 127.0.0.1:1314 {
        transport http {
            versions 1.1
            read_timeout 60s
            write_timeout 60s
            dial_timeout 10s
            response_header_timeout 30s
        }
    }
}
