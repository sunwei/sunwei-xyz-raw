{
	# 全局日志配置
	log {
		output file /var/log/caddy/access.log
		format json
	}
}

sunwei.xyz {
	root * /root/web/sunwei-xyz-raw
	file_server
}

notes.sunwei.xyz {
	root * /root/web/sunwei-xyz-raw/notes
	file_server
}

# 子域名配置，将所有请求转发到 127.0.0.1:1314
mdfriday.sunwei.xyz {
    reverse_proxy 127.0.0.1:1314 {
        transport http {
            versions h1
        }
    }
}

